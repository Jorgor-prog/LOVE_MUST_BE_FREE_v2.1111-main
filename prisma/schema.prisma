model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  profiles  Profile?
}

model Profile {
  userId     Int    @id
  user       User   @relation(fields: [userId], references: [id])
  nickname   String?
  photoUrl   String?
  interval   Int?     // інтервал для відправки коду
  codeConfig Json?    // конфіг юзера для коду
}
