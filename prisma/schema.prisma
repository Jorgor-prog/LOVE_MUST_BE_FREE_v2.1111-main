datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  profile   Profile?
}

model Profile {
  userId     Int     @id
  user       User    @relation(fields: [userId], references: [id])
  nickname   String?
  photoUrl   String?
  interval   Int?     // интервал отправки кода
  codeConfig Json?    // JSON с конфигом для кода
}
